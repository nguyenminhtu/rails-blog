<%= render "layouts/navigation_admin" %>

<div class="container">
	<div class="row">
		<%= render "layouts/sidebar_admin" %>

		<div class="col-md-10">
			<h1 class="text-center">Listing posts</h1>
			<hr>
			<table class="table table-hover teble-bordered text-center">
				<thead>
					<tr>
						<th class="text-center">ID</th>
						<th class="text-center">Title</th>
						<th class="text-center">Description</th>
						<th class="text-center">User</th>
						<th class="text-center">Created at</th>
						<th class="text-center">Updated at</th>
						<th class="text-center" colspan="2">Action</th>
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
						<tr>
							<td><%= post.id %></td>
							<td><%= link_to post.title, admin_post_path(post) %></td>
							<td><%= truncate(post.description, length: 100) %></td>
							<td><%= post.user.username %></td>
							<td><%= time_ago_in_words(post.created_at) %> ago</td>
							<td><%= time_ago_in_words(post.updated_at) %> ago</td>
							<td><%= link_to "Edit", edit_admin_post_path(post), class: 'btn btn-warning' %></td>
							<td><%= link_to "Delete", admin_post_path(post), method: :delete, data: { confirm: "Are u sure want to delete this post?" }, class: 'btn btn-danger' %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

			<div class="text-center">
				<%= will_paginate %>
			</div>
		</div>
	</div>
</div>

<%= render 'layouts/footer' %>
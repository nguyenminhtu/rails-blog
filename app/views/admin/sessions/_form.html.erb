<%= form_for(:session, url: admin_login_path) do |f| %>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="text-center">Login to admin dashboard</h3>
		</div>

		<div class="panel-body">

			<div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control', autofocus: true, required: true, maxlength: '30' %>
			</div>

			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control', required: true, maxlength: '30' %>
			</div>

			<div class="form-group">
				<%= f.submit "Log in", class: 'btn btn-primary' %>
			</div>			
		</div>
	</div>

<% end %>
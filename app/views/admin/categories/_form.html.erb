<%= render 'shared/errors', obj: @category %>

<%= form_for [:admin, @category] do |f| %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.submit class: 'btn btn-primary' %>
	</div>

<% end %>
<%= render "layouts/navigation_admin" %>

<div class="container">
	<div class="row">
		<%= render "layouts/sidebar_admin" %>

		<div class="col-md-10">
			<h1 class="text-center">Listing categories</h1>
			<hr>
			<table class="table table-hover teble-bordered text-center">
				<thead>
					<tr>
						<th class="text-center">ID</th>
						<th class="text-center">Name</th>
						<th class="text-center" colspan="2">Action</th>
					</tr>
				</thead>
				<tbody>
					<% @categories.each do |category| %>
						<tr>
							<td><%= category.id %></td>
							<td><%= link_to category.name, admin_category_path(category) %></td>
							<td><%= link_to "Edit", edit_admin_category_path(category), class: 'btn btn-warning' %></td>
							<td><%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are u sure want to delete this category?" }, class: 'btn btn-danger' %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

			<div class="text-center">
				<%= will_paginate %>
			</div>
		</div>
	</div>
</div>

<%= render 'layouts/footer' %>